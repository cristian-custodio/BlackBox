<div class="container">
  <script src="/js/adminDashboard.js"></script>
  <div class="row" id="pwd-container">
    <div class="col-md-12">
      <section class="login-form">
        <form method="post" action="#" role="login">
          <img src="/images/adminDashboardLogo.png" class="img-responsive" alt="" />
           <div class="row">
                <ul class="nav nav-pills nav-justified" style="">
                  <li class="active"><a data-toggle="pill" href="#checkings">Checking</a></li>
                  <li><a data-toggle="pill" href="#savings">Savings</a></li>
                  <li><a data-toggle="pill" href="#transfer">Transfer</a></li>
                </ul>
                <div class="tab-content">
                  <div id="checkings" class="tab-pane fade in active">
                    <h3>Checkings Account</h3>
                    <!-- Checkings User List-->
                                <div class="panel panel-success">
                                  <div class="panel-heading">
                                    <h3 class="panel-title"><strong>Users</strong></h3>
                                  </div>
                                  <div class="panel-body">
                                    <table class="table table-hover" id='user-table-checkings'>
                                      <thead style="text-align:center">
                                        <tr>
                                          <th>ID</th>
                                          <th>First Name</th>
                                          <th>Last Name</th>
                                          <th>Account Number</th>
                                          <th>Balance</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                    </table>
                                  </div>
                              </div>
                  </div>
                  <div id="savings" class="tab-pane fade">
                    <h3>Savings Account</h3>
                    <!-- Savings User List-->
                                <div class="panel panel-success">
                                  <div class="panel-heading">
                                    <h3 class="panel-title"><strong>Users</strong></h3>
                                  </div>
                                  <div class="panel-body">
                                    <table class="table table-hover" id='user-table-savings'>
                                      <thead>
                                        <tr>
                                          <th>ID</th>
                                          <th>First Name</th>
                                          <th>Last Name</th>
                                          <th>Account Number</th>
                                          <th>Balance</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                    </table>
                                  </div>
                              </div>
                  </div>
                  <div id="transfer" class="tab-pane fade">
                    <h3 >Transfer Funds</h3>
                    <div class="col-md-12" >
                        <!-- Transfer-->
                    <form method="post" action="#" role="login">
                      
                      <div class="col-md-6">
                        <h4 >Transfer Source</h4>
                        <input type="text" name="account-number-source" placeholder="Account Number" required class="form-control input-lg" value="" />
                        <input type="text" name="transfer-amount-source" placeholder="Transfer Amount" required class="form-control input-lg" value="" />
                      </div>
                      <div class="col-md-6">
                    <h4 >Transfer Destination</h4>
                       <input type="text" name="account-number-destination" placeholder="Account Number" required class="form-control input-lg" value="" />
                       <input type="text" name="transfer-note" placeholder="Transfer Note" required class="form-control input-lg" value="" />
                      </div>
                      <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Transfer</button>
                    </form>
                    </div>
                  </div>
                </div>
        </form>
      </section>
      </div>
  </div>

  